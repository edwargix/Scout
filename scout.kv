#:import Window kivy.core.window.Window
#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<ScoutScreenManager>:
    id: screenmanager
    transition: FadeTransition()
    TeamsScreen:

<Team>:
    size_hint_y: 0
    Button:
        text: str(root.num)
        pos: root.pos
        size: root.size
        on_release: app.root.goto_team(3090)
        size_hint_y: 0

<TeamsScreen>:
    ScrollView:
        size: (Window.width, Window.height)
        GridLayout:
            id: layout
            size_hint_y: None
            height: self.minimum_height
            cols: 1
            rows: 8
            row_default_height: Window.height / 6
            row_force_default: True
            orientation: 'vertical'
            Team:
                num: 3090
            Team:
                num: 6969
            Team:
                num: 6666
            Team:
                num: 9000
            Team:
                num: 1000
            Team:
                num: 1212
            Team:
                num: 1515
            Team:
                num: 1616

<Label>:
    color: (0,0,0,1)

<CheckBox>:
    color: (0,0,0,1)

<TeamScreen>:
    canvas:
        Color:
            rgba: 0.55,0.55,0.55,1
        Rectangle:
            pos: self.pos
            size: Window.size
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: str(root.num)
        BoxLayout:
            Label:
                text: 'Match #'
            TextInput:
        BoxLayout:
            Label:
                text: 'Auto'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'F'
                CheckBox:
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'S'
                CheckBox:
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'B'
                CheckBox:
        BoxLayout:
            Label:
                text: 'Notes'
            TextInput:
        BoxLayout:
            Label:
                text: 'Teleop'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Gears'
                TextInput:
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'High Goal'
                TextInput:
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Defense'
                TextInput:
        Button:
            text: 'Save'