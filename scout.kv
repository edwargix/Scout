#:import Window kivy.core.window.Window
#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<ScoutScreenManager>:
    id: screenmanager
    transition: FadeTransition()
    TeamsScreen:

<Team>:
    size_hint_y: 0
    Button:
        text: str(root.num) + "  " + root.name
        pos: root.pos
        size: root.size
        on_release: app.root.goto_team(root.num)
        size_hint_y: 0

<TeamsScreen>:
    name: 'teams'
    ScrollView:
        size: (Window.width, Window.height)
        GridLayout:
            id: team_grid
            size_hint_y: None
            height: self.minimum_height
            cols: 1
            rows: 8
            row_default_height: Window.height / 6
            row_force_default: True
            orientation: 'vertical'

<Label>:
    color: (0,0,0,1)

<CheckBox>:
    color: (0,0,0,1)

<TeamScreen>:
    canvas:
        Color:
            rgba: 0.55,0.55,0.55,1
        Rectangle:
            pos: self.pos
            size: Window.size
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.5
            Button:
                size_hint_x: 0.3
                text: 'Back'
                on_release: app.root.current = 'teams'
            Label:
                text: str(root.num)
        BoxLayout:
            Label:
                text: 'Match #'
            TextInput:
        BoxLayout:
            Label:
                text: 'Auto'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'F'
                CheckBox:
                    id: auto_f
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'S'
                CheckBox:
                    id: auto_s
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'B'
                CheckBox:
                    id: auto_b
        BoxLayout:
            Label:
                text: 'Notes'
            TextInput:
                id: notes
        BoxLayout:
            Label:
                text: 'Teleop'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Gears'
                TextInput:
                    id: teleop_gears
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'High Goal'
                TextInput:
                    id: teleop_high_goal
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Defense'
                TextInput:
                    id: teleop_defense
        Button:
            text: 'Save'
            on_release: app.root.save_team(int(root.num))